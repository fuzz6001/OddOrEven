<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/open"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_game"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp" />

    <TextView
        android:text="@string/result_cho"
        android:layout_width="wrap_content"
        android:id="@+id/text_view_result"
        android:layout_height="wrap_content"
        android:textSize="128sp"
        android:textColor="@android:color/black"
        android:lines="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.100000024" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/alea_a1"
        android:id="@+id/image_view_right"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_result"
        android:contentDescription="@string/left_dice"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/alea_a1"
        android:id="@+id/image_view_left"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_result"
        android:contentDescription="@string/right_dice"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_view_result"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />
</android.support.constraint.ConstraintLayout>
